
(setq default-major-mode 'text-mode)
(add-hook 'text-mode-hook 'turn-on-auto-fill)
(global-set-key "\C-h" "\C-?")

; Set some useful key-bindings
;
; Uncomment the next line to make the ` key behave like ESC on PC keyboards
;(global-set-key "`" 'ESC-prefix)

(global-set-key "\C-\\" 'isearch-forward)
(global-set-key "\C-s" 'isearch-forward)
(global-set-key "\C-q" 'quoted-insert)
(global-set-key "\C-x\C-i" 'insert-file)
(global-set-key "\C-x\C-l" 'goto-line)
(global-set-key "\C-x\C-n" 'narrow-to-region)
(global-set-key "\C-x\C-u" 'undo)
(global-set-key "\C-x!" 'shell)
(global-set-key "\C-xn" 'other-window)
(global-set-key "\C-xd" 'delete-window)
(global-set-key "\C-xp" 'other-window)
(global-set-key "\C-xs" 'save-buffer)
(global-set-key "\C-xs" 'save-file)
					; setup VT-100 keys
(global-set-key "\C-[[A" 'previous-line)
(global-set-key "\C-[[B" 'next-line)
(global-set-key "\C-[[C" 'forward-char)
(global-set-key "\C-[[D" 'backward-char)
(global-set-key "\C-[OP" 'find-file)	; F1
(global-set-key "\C-[OQ" 'save-buffer)	; F2
(global-set-key "\C-[OR" 'scroll-other-window-down) ; Sh-F1 (local-misc.el)
(global-set-key "\C-[OS" 'scroll-other-window) ;Sh-F2
(global-set-key "\C-[[H" 'beginning-of-buffer)
(global-set-key "\C-[[Y" 'end-of-buffer)
(global-set-key "\C-[[U" 'scroll-down)
(global-set-key "\C-[[V" 'scroll-up)


(display-time)


