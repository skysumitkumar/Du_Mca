JAVACFLAGS      := -g -Xlint -d .

SOURCES        := $(shell find -type f -name "*.java")
BYTECODE_FILES := $(SOURCES:.java=.class)

.PHONY: all
all: $(BYTECODE_FILES)

%.class: %.java
	@echo -n "[>] "
	javac $(JAVACFLAGS) $^

.PHONY: clean
clean:
	@echo -n "[>] Removing generated bytecode files ... "
	@rm -rf $(shell find -type f -name "*.class")
	@echo "done"